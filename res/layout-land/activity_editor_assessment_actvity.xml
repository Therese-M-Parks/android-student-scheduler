<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.EditorAssessmentActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent">

        </android.support.v7.widget.Toolbar>

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="30dp"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:hint="Course Due Date"/>-->

        <EditText
            android:id="@+id/etAssessmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/title_hint"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/etAssessmentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etAssessmentTitle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/type_hint"
            android:ems="10"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="75dp" />

        <!--<EditText-->

        <!--android:id="@+id/etScheduledDate"-->
        <!--android:layout_width="269dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="150dp"-->
        <!--android:ems="10"-->
        <!--android:inputType="date"-->
        <!--tools:layout_editor_absoluteX="80dp"-->
        <!--tools:layout_editor_absoluteY="136dp" />-->

        <EditText
            android:id="@+id/etScheduledDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etAssessmentType"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:inputType="date"
            android:hint="@string/date_hint"
            android:ems="10"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/tv24HourNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etScheduledDate"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="30dp"
            android:text="@string/notify_me_text_hint" />

        <CheckBox
            android:id="@+id/setAssessmentNotificationBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv24HourNotification"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="118dp"
            android:layout_marginRight="118dp" />

    </RelativeLayout>

</ScrollView>