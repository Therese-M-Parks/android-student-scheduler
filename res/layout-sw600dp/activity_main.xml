<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        tools:context=".activities.MainActivity">

        <Button
            android:id="@+id/button_terms"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/button_terms"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:text="Terms" />

        <Button
            android:id="@+id/button_courses"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/button_terms"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/button_courses"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:text="Courses" />

        <Button
            android:id="@+id/button_mentors"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/button_courses"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/button_mentors"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:text="Mentors" />


    </RelativeLayout>
</ScrollView>